                <a href="/login" id="login" class="dropdown-item">Iniciar Sesión</a>
                <% } else { %>
                <a href="/account" class="dropdown-item">Mi Cuenta</a>
                <a href="/addresses" class="dropdown-item">Direcciones</a>
