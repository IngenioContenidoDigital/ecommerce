    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/suneditor@2.28.0/dist/css/suneditor.min.css">
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>
    <link href='https://cdn.jsdelivr.net/npm/bulma-tooltip@3.0.2/dist/css/bulma-tooltip.min.css' rel='stylesheet'>
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%if(req.hostname==='iridio.co'){%>
          <a class="navbar-item" href="/"><img src="<%=cdnurl%>/iridio.png"></a>
        <%}else{%>
          <a class="navbar-item" href="/"><img src="/images/1ecommerce-logo.png"></a>
        <%}%>
        <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div id="navbarBasicExample" class="navbar-menu">
      </div>
      <div class="navbar-end has-text-right">
        <div class="navbar-item is-inline-block">
            <div class="buttons">
              <%if(session.user.rights.name !== 'superadmin' && session.user.rights.name !== 'admin'){%>
                <a href="/upgradesubscription" class="button is-primary is-light">
                  <span class="icon has-text-primary">
                    <i class='bx bx-check-square'></i>
                  </span>
                  <span>Subir de plan</span>
                </a>
                <%if(session.btnCalendar){%>
                  <a href="<%= session.linkCalendar %>" target="_blank" class="button has-tooltip-bottom has-tooltip-info" data-tooltip="Puedes agendar tu cita de soporte">
                    <i class='bx bx-calendar-event bx-tada is-size-4'></i>
                  </a>
                <%}%>
                <a href="#" id="addTicket" class="button ">
                  <i class='bx bxs-coupon bx-flashing bx-flip-horizontal is-size-4' ></i>
                </a>
                <a href="/channelmessages/<%=session.user.seller%>" id="notification-button" class="button">
                  <span title="Badge top right" class="badge"><%if(session.questions !== undefined ){%><%=session.questions%> <%}else{%>0<%}%></span>
                  <i class='is-size-4 bx bxs-bell-ring'></i>
                </a>
              <%}%>
              <a href="/cart" id="cart-button" class="button">
                <span title="Badge top right" class="badge"><%if(session.cart !== undefined ){%><%=session.cart.items%> <%}else{%>0<%}%></span>
                <i class='is-size-4 bx bxs-cart'></i>
              </a>
              <div class="dropdown is-right is-hoverable">
                <div class="dropdown-trigger">
                  <button id="account-menu" class="button" aria-haspopup="true" aria-controls="dropdown-menu4">
                    <% if(session.user === undefined) { %>
                      <span><i class="is-size-4 bx bxs-user"></i></span>
                    <%}else{%>
                      <span><i class='is-size-4 bx bxs-user-detail'></i></span>
                    <%}%>
                  </button>
                </div>
                <div class="dropdown-menu" id="dropdown-menu4" role="menu">
                  <div class="dropdown-content">
                    <% if(session.user === undefined) { %>
                    <a href="/login" id="login" class="dropdown-item">Iniciar Sesión</a>
                    <% } else { %>
                    <a href="/sellers" class="dropdown-item">Mi Cuenta</a>
                    <a href="/orders" class="dropdown-item">Pedidos</a>
                    <hr class="dropdown-divider">
                    <a href="/logout" class="dropdown-item">Cerrar Sesión</a>
                    <% }%>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
  </nav>
    <div class="columns">      
      <div class="column is-2 container-menu">
        <div class="container">
          <%- partial('../partials/adminmenu.ejs') %>
        </div>
      </div>
      <div class="column is-10 container-body">
        <div class="container"><%- body %></div>
      </div>
    </div>
    <div class="modal" id="modalTicket">
      <div class="modal-background"></div>
      <div class="modal-content">
        <div class="box">
          <article class="message is-success is-hidden" id="msg-success">
            <div class="message-body">
              Se envió tu ticket correctamente! Te responderemos en el transcurso de 24 horas.
            </div>
          </article>
          <article class="message is-danger is-hidden" id="msg-error">
            <div class="message-body">
              <p id="text-error">Se produjo un error al enviar tu ticket! Intenta más tarde.</p>
            </div>
          </article>
          <form id="formTicket">
            <div class="field">
              <label class="label">Nombre</label>
              <div class="control has-icons-left has-icons-right">
                <input class="input" name="name" type="text" disabled placeholder="Ingresa Nombre" value="<%= session.user.fullName %>"/>
                <span class="icon is-small is-left">
                  <i class='bx bxs-user'></i>
                </span>
              </div>
            </div>
            <div class="field">
              <label class="label">Email</label>
              <div class="control has-icons-left has-icons-right">
                <input class="input" name="email" type="email" disabled placeholder="Ingresa Email" value="<%= session.user.emailAddress %>"/>
                <span class="icon is-small is-left">
                  <i class="bx bx-envelope"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <label class="label">Asunto</label>
              <div class="control has-icons-left has-icons-right">
                <input class="input" name="issue" type="text" placeholder="Asunto por el cual quiere crear el ticket" autocomplete="off"/>
                <span class="icon is-small is-left">
                  <i class='bx bxs-edit-alt'></i>
                </span>
              </div>
            </div>
            <div class="field">
              <label class="label">Descripción</label>
              <div class="control">
                <textarea class="textarea" name="description" placeholder="Descripción del problema que presenta"></textarea>
              </div>
            </div>
            <div class="field is-grouped">
              <div class="control">
                <button id='sendTicket' class="button is-primary is-small">Enviar Ticket</button>
              </div>
              <div class="control">
                <button id='cancel' class="button is-light is-small">Cancelar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <button class="modal-close is-large" aria-label="close"></button>
    </div>
  <script>
    live('#addTicket','click',function(){
      const modal = document.querySelector('#modalTicket');
      if(!hasClass(modal,'is-active'))
        addClass(modal,'is-active');
    });

    live('#sendTicket','click', e => {
      e.preventDefault();
      addClass(e.target, 'is-loading');
      let form = document.querySelector('#formTicket');
      let success = document.querySelector('#msg-success');
      let error = document.querySelector('#msg-error');
      let texterror = document.querySelector('#text-error');
      let data = {
        name: form.querySelector('input[name="name"]').value,
        email: form.querySelector('input[name="email"]').value,
        issue: form.querySelector('input[name="issue"]').value,
        description: form.querySelector('textarea[name="description"]').value
      }
      if (data.name || data.email || data.issue || data.description) {
        io.socket.post(`/createticket`, data, function (resData, jwRes) {
          removeClass(e.target, 'is-loading');
          if(jwRes.statusCode == 200){
            if (resData && resData.error) {
              removeClass(error, 'is-hidden');
              addClass(form,'is-hidden');
              setTimeout(function() {
                removeClass(form,'is-hidden');
                addClass(error,'is-hidden');
              }, 5000);
            } else {
              removeClass(success, 'is-hidden');
              addClass(form,'is-hidden');
              setTimeout(function() {
                addClass(success,'is-hidden');
                removeClass(form,'is-hidden');
                closeModal();
                form.querySelector('input[name="issue"]').value = '',
                form.querySelector('textarea[name="description"]').value = ''
              }, 5000);
            }
          } else {
            removeClass(error, 'is-hidden');
            addClass(form,'is-hidden');
            setTimeout(function() {
              removeClass(form,'is-hidden');
              addClass(error,'is-hidden');
            }, 5000);
          };
        });
      } else {
        removeClass(e.target, 'is-loading');
        texterror.innerHTML = "Debes completar todos los campos."
        removeClass(error, 'is-hidden');
        setTimeout(function() {
          texterror.innerHTML = "Se produjo un error al enviar tu ticket! Intenta más tarde."
          addClass(error,'is-hidden');
        }, 5000);
      }
    });
    
    const toogleMenu = (elm) => {
      let icon = elm.target.querySelector('span');
      if(hasClass(elm.target.nextSibling.nextSibling,'is-hidden')){
        removeClass(elm.target.nextSibling.nextSibling,'is-hidden');
        icon.innerHTML='<i class="bx bx-caret-down"></i>';
      }else{
        addClass(elm.target.nextSibling.nextSibling,'is-hidden');
        icon.innerHTML='<i class="bx bx-caret-left"></i>';
      }
    };

    const elements = document.querySelectorAll('.menu-label');
    elements.forEach((element) => {
      element.addEventListener('click', toogleMenu);
    });

    live('.modal-background, .modal-close, #cancel', 'click',e=>{
      e.preventDefault();
      closeModal();
    });

    function closeModal() {
      let modals = document.querySelectorAll('.modal');
      modals.forEach(modal => {
        removeClass(modal,'is-active');
      });
    }

    const socket = io.socket.on('addtocart', function (data){
        let cart = document.querySelector('#cart-button')
        cart.querySelector('.badge').innerHTML = data.items;
    });
    const socketNotification = io.socket.on('notificationml', function (data){
      let notification = document.querySelector('#notification-button')
      let user = <%- JSON.stringify(session.user) %>;
      if(user !== undefined && user.rights.name !== 'superadmin' && data.seller === user.seller){
        notification.querySelector('.badge').innerHTML = data.questionsSeller;
      }
    });
  </script>


